<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beautifullGray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/baseLinearLayout"
        android:weightSum="14"
        >

        <TextView
            android:id="@+id/mainShowingView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="4"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="right"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="52sp"
            app:autoSizeMinTextSize="2sp"
            app:autoSizeStepGranularity="5sp"
            app:autoSizeTextType="uniform"

            />

        <LinearLayout
            android:id="@+id/firstLinearLayout"
            style="@style/defaultStyleForLinearLayout"
            >

            <Button
                android:id="@+id/clearCurrentExpression"
                style="@style/defaultStyleForSignButtons"
                android:text="AC" />

            <Button
                android:id="@+id/delete"
                style="@style/defaultStyleForSignButtons"
                android:text="Del" />

            <Button
                android:id="@+id/remainder"
                style="@style/defaultStyleForSignButtons"
                android:text="%" />
            <Button
                style="@style/defaultStyleForSignButtons"
                android:id="@+id/division"
                android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLinearLayout"
            style="@style/defaultStyleForLinearLayout">

            <Button
                android:id="@+id/digitSeven"
                style="@style/defaultStyleForDigitButtons"
                android:text="7" />

            <Button
                android:id="@+id/digitEight"
                style="@style/defaultStyleForDigitButtons"
                android:text="8" />

            <Button
                android:id="@+id/digitNine"
                style="@style/defaultStyleForDigitButtons"
                android:text="9" />

            <Button
                android:id="@+id/multiply"
                style="@style/defaultStyleForSignButtons"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLinearLayout"
            style="@style/defaultStyleForLinearLayout"
            >

            <Button
                android:id="@+id/digitFour"
                style="@style/defaultStyleForDigitButtons"
                android:text="4" />

            <Button
                android:id="@+id/digitFive"
                style="@style/defaultStyleForDigitButtons"
                android:text="5" />

            <Button
                android:id="@+id/digitSix"
                style="@style/defaultStyleForDigitButtons"
                android:text="6" />

            <Button
                android:id="@+id/subtraction"
                style="@style/defaultStyleForSignButtons"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLinearLayout"
            style="@style/defaultStyleForLinearLayout"
            >

            <Button
                android:id="@+id/digitOne"
                style="@style/defaultStyleForDigitButtons"
                android:text="1" />

            <Button
                android:id="@+id/digitTwo"
                style="@style/defaultStyleForDigitButtons"
                android:text="2" />

            <Button
                android:id="@+id/digitThree"
                style="@style/defaultStyleForDigitButtons"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                style="@style/defaultStyleForSignButtons"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLinearLayout"
            android:layout_marginBottom="8dp"
            style="@style/defaultStyleForLinearLayout">

            <Button
                android:id="@+id/digitZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:background="@color/heavyRed"
                android:layout_weight="2"
                android:text="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:weightSum="2">

            <Button
                android:id="@+id/point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:background="@color/heavyRed"
                android:text="." />

            <Button
                android:id="@+id/execute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:background="@color/strangeOrange"
                android:text="=" />

        </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>